{
  "name": "ai-resume-agent",
  "version": "2.0.0",
  "private": true,
  "description": "AI-powered resume creation and career guidance platform",
  "author": "AI Resume Agent Team",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:functions\"",
    "dev:web": "cd apps/web && npm run dev",
    "dev:functions": "cd apps/functions && netlify dev",
    "build": "npm run build:web",
    "build:web": "cd apps/web && npm run build",
    "build:functions": "cd apps/functions && npm run build",
    "clean": "npm run clean:web && npm run clean:functions",
    "clean:web": "cd apps/web && rm -rf dist node_modules/.vite",
    "clean:functions": "cd apps/functions && rm -rf dist .netlify",
    "test": "npm run test:web",
    "test:web": "cd apps/web && npm run test",
    "test:functions": "cd apps/functions && npm run test",
    "type-check": "npm run type-check:web",
    "type-check:web": "cd apps/web && npx tsc --noEmit",
    "type-check:functions": "cd apps/functions && npx tsc --noEmit",
    "lint": "npm run lint:web",
    "lint:web": "cd apps/web && npm run lint",
    "lint:functions": "cd apps/functions && npm run lint",
    "lint:fix": "npm run lint:fix:web",
    "lint:fix:web": "cd apps/web && npm run lint:fix",
    "lint:fix:functions": "cd apps/functions && npm run lint:fix",
    "deploy": "npm run build && netlify deploy --prod --dir=apps/web/dist",
    "deploy:staging": "npm run build && netlify deploy --dir=apps/web/dist --alias=staging",
    "deploy:production": "npm run build && netlify deploy --prod --dir=apps/web/dist",
    "start": "cd apps/web && npm run preview",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md,css}\"",
    "format:check": "prettier --check \"**/*.{js,ts,tsx,json,md,css}\"",
    "update-deps": "npx npm-check-updates -u && npm install",
    "check-deps": "npx depcheck || true"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "optionalDependencies": {
    "supabase": "^1.110.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "packageManager": "npm@10.2.4",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/ai-resume-agent.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/ai-resume-agent/issues"
  },
  "homepage": "https://ai-resume-agent.com",
  "keywords": [
    "ai",
    "resume",
    "career",
    "job-search",
    "typescript",
    "react",
    "supabase",
    "openai",
    "netlify"
  ],
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100,
    "bracketSpacing": true,
    "arrowParens": "avoid"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "import"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-explicit-any": "warn",
      "import/order": [
        "error",
        {
          "groups": [
            "builtin",
            "external",
            "internal",
            "parent",
            "sibling",
            "index"
          ],
          "newlines-between": "always"
        }
      ]
    }
  }
}
